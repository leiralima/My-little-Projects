<Window x:Class="Scrambler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scrambler"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TxtBox1" HorizontalAlignment="Center" Margin="0,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="724"/>
        <TextBox x:Name="TxtBox2" HorizontalAlignment="Center" Margin="0,107,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="724"/>
        <TextBox x:Name="TxtBox3" HorizontalAlignment="Center" Margin="0,279,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="724"/>
        <Button x:Name="btnExit" Content="_Exit" HorizontalAlignment="Left" Margin="410,370,0,0" VerticalAlignment="Top" Width="200" Height="35" Click="btnExit_Click"/>
        <Button x:Name="btmScr" Content="_Scramble" HorizontalAlignment="Left" Margin="190,370,0,0" VerticalAlignment="Top" Width="200" Height="35"/>

    </Grid>
</Window>
